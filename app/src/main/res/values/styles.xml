<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="QuizDefaultRadioButton" parent="Theme.MaterialComponents">
        <!--    Copy paste from material OutlinedButton, but without messing the background tint    -->
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:paddingLeft">@dimen/mtrl_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_padding_right</item>
        <item name="strokeColor">@color/mtrl_btn_stroke_color_selector</item>
        <item name="strokeWidth">@dimen/mtrl_btn_stroke_size</item>
        <item name="android:textColor">@color/mtrl_text_btn_text_color_selector</item>
        <item name="iconTint">@color/mtrl_text_btn_text_color_selector</item>
        <item name="iconPadding">@dimen/mtrl_btn_text_btn_icon_padding</item>
        <item name="rippleColor">@color/mtrl_btn_text_btn_ripple_color</item>
        <item name="buttonTint">@color/purple_500</item>
        <item name="cornerRadius">5dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shape">rectangle</item>
    </style>

    <style name="QuizCorrectRadioButton" parent="QuizDefaultRadioButton">
        <item name="strokeColor">@color/soft_green</item>
        <item name="android:textColor">@color/soft_green</item>
        <item name="iconTint">@color/soft_green</item>
        <item name="rippleColor">@color/soft_green</item>
        <item name="buttonTint">@color/soft_green</item>
    </style>

    <style name="QuizWrongRadioButton" parent="QuizDefaultRadioButton">
        <item name="strokeColor">@color/soft_red</item>
        <item name="android:textColor">@color/soft_red</item>
        <item name="iconTint">@color/soft_red</item>
        <item name="rippleColor">@color/soft_red</item>
        <item name="buttonTint">@color/soft_red</item>
    </style>
</resources>